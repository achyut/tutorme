<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uta.edu.tutorme">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.SubcategoryActivity" />
        <activity android:name=".activities.PopulateCategoryActivity" />
        <activity android:name=".activities.PopulateSubCategoryActivity" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />

        <meta-data
            android:name="DATABASE"
            android:value="tutorme.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="uta.edu.tutorme" />

        <activity
            android:name=".activities.HomepageActivity"
            android:label="@string/title_activity_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.PostActivity" />
        <activity android:name=".activities.PostDetailActivity"></activity>
    </application>

</manifest>
